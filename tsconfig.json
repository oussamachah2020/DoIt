{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@store/*": ["src/zustand/*"],
      "@utils/*": ["src/utils/*"],
      "@loaders/*": ["src/loaders/*"]
    },
    "typeRoots": ["src/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
